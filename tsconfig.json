{
	"compilerOptions": {
		"rootDir": "src",
		"target": "es5",
		"alwaysStrict": false,
		"sourceMap": false,
		"removeComments": true,
		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"lib": ["es6", "DOM"],
		"strictNullChecks": true,
		"declaration": false,
		"outDir": "./dist",
		"jsx": "react",
		"jsxFactory": "h"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
